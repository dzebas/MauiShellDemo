<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiShell.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiShell.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiShell">

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate views:HomePage}"/>
        <ShellContent Title="Recents" ContentTemplate="{DataTemplate views:RecentsPage}"/>
        <ShellContent Title="Timers" ContentTemplate="{DataTemplate views:TimersPage}"/>
        <ShellContent Title="Agenda" ContentTemplate="{DataTemplate views:AgendaPage}"/>
    </TabBar>
</Shell>
